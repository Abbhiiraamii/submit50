        "import random\n",
        "while i==0:\n",
        "  player=input(\"rock/paper/scissor:\")\n",
        "  computer=random.choice(a)\n",
        "  print(f\"{name}:{computer}\")\n",
        "  if player==computer:\n",
        "    print(\"draw\")\n",
